<table>
  <tr>
    <th>Product summary</th>
  </tr>

  <tr>
    <th>Product</th>
    <th>Category</th>
    <th>Price per unit</th>
    <th>Inventory</th>
    <th></th>
    <th>Options</th>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td>$ <%= item.price %> / <%= item.unit %></td>
    <td><%= item.quantity %></td>
    <td><%= link_to 'Show', item_path(item) %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Add/update inventory', stock_item_path(item.id) %></td>
    <td><%= link_to 'Delete', item_path(item),
            method: :delete,
            data: { confirm: 'This will delete the product listing, but not any line items that have been posted. '\
              'Are you sure you want to delete this product listing?' } %></td>
  </tr>
  <% end %>

</table>

<br />

